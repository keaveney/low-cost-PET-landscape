	langid = {english},
	note = {Publisher: {RSC}},
	keywords = {review, synthesis},
	file = {Full Text PDF:/home/simon/snap/zotero-snap/common/Zotero/storage/X9VMM74P/Baig et al. - 2021 - Nanomaterials a review of synthesis methods, properties, recent progress, and challenges.pdf:application/pdf},
